{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ui": [
        "dist/ui"
      ],
      "core": [
        "dist/ui/core/core",
        "dist/ui/core"
      ],
      "button": [
        "dist/ui/button/button",
        "dist/ui/button"
      ],
      "local-nav": [
        "dist/ui/navigation/local-nav/local-nav",
        "dist/ui/navigation/local-nav"
      ],
      "switcher": [
        "dist/ui/navigation/switcher/switcher",
        "dist/ui/navigation/switcher"
      ],
      "tabs": [
        "dist/ui/navigation/tabs/tabs",
        "dist/ui/navigation/tabs"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
