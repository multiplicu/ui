{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ui": [
        "dist/ui"
      ],
      "core": [
        "dist/ui/core/core",
        "dist/ui/core"
      ],
      "button": [
        "dist/ui/button/button",
        "dist/ui/button"
      ],
      "local-nav": [
        "dist/ui/navigation/local-nav/local-nav",
        "dist/ui/navigation/local-nav"
      ],
      "switcher": [
        "dist/ui/navigation/switcher/switcher",
        "dist/ui/navigation/switcher"
      ],
      "nav-toggle": [
        "dist/ui/navigation/toggle/toggle",
        "dist/ui/navigation/toggle"
      ],
      "tabs": [
        "dist/ui/navigation/tabs/tabs",
        "dist/ui/navigation/tabs"
      ],
      "mega-menu": [
        "dist/ui/navigation/mega-menu/mega-menu",
        "dist/ui/navigation/mega-menu"
      ],
      "form-field": [
        "dist/ui/form/form-field/form-field",
        "dist/ui/form/form-field"
      ],
      "input": [
        "dist/ui/form/input/input",
        "dist/ui/form/input"
      ],
      "badge": [
        "dist/ui/badge/badge",
        "dist/ui/badge"
      ],
      "avatar": [
        "dist/ui/avatar/avatar",
        "dist/ui/avatar"
      ],
      "snackbar": [
        "dist/ui/snackbar/snackbar",
        "dist/ui/snackbar"
      ],
      "faq": [
        "dist/faq/faq",
        "dist/faq"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}